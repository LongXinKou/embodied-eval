{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "embodied_eval",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "CUDA_VISIBLE_DEVICES": "3" // <--- This line is added to specify GPU 3
            },
            "args": [
                "--model", "robobrain",
                "--model_args", "model_name_or_path=/data/klx/hf_model/robobrain/,lora_id=/data/klx/hf_model/robobrain/affordance/",
                "--tasks", "where2place",
                "--batch_size", "1",
                "--output_path", "/data/klx/embodied-eval/logs/logs_robobrain/",
            ]
        }
    ]
}